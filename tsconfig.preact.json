{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "baseUrl": "./src",
        "strict": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop":true,
        "forceConsistentCasingInFileNames":true,
        "target": "es5",
        "jsx": "react",
        "jsxFactory": "h",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "esnext"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/react/**/*",
        "node_modules"
    ]
}